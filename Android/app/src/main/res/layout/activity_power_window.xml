<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="horizontal"
    android:gravity="center|center_horizontal"
    tools:context="developer.tech_m_car.PowerWindow">



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="30dp"
        >
        <Button
            android:layout_width="120dp"
            android:layout_height="55dp"
            android:text="Front Right Down"
            android:layout_weight="1"

            android:layout_marginBottom="8dp"
            android:background="@drawable/background4"
            android:padding="5dp"
            android:onClick="fourf"/>
        <Button
            android:layout_marginBottom="8dp"
            android:layout_width="120dp"
            android:layout_height="55dp"
            android:text="Front Left Down"
            android:layout_weight="1"
            android:background="@drawable/background4"
            android:padding="5dp"

            android:onClick="onef"/>
        <Button
            android:layout_marginBottom="8dp"
            android:layout_width="120dp"
            android:layout_height="55dp"

            android:text="Back Left Down"
            android:layout_weight="1"
            android:background="@drawable/background4"
            android:padding="5dp"

            android:onClick="twof"/>

        <Button
            android:layout_width="120dp"
            android:layout_height="55dp"


            android:text="Back Right Down"
            android:layout_weight="1"
            android:layout_marginBottom="8dp"
            android:background="@drawable/background4"
            android:padding="5dp"
            android:onClick="three"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:layout_width="120dp"
            android:layout_height="55dp"
            android:text="Front Right Up"
            android:layout_weight="1"
            android:layout_marginBottom="8dp"
            android:background="@drawable/background4"
            android:padding="5dp"
            android:onClick="four"/>
        <Button
            android:layout_width="120dp"
            android:layout_height="55dp"
            android:text="Front Left Up"
            android:layout_weight="1"
            android:layout_marginBottom="8dp"
            android:background="@drawable/background4"
            android:padding="5dp"
            android:onClick="one"/>
        <Button
            android:layout_width="120dp"
            android:layout_height="55dp"

            android:text="Back Left Up"
            android:layout_weight="1"
            android:layout_marginBottom="8dp"
            android:background="@drawable/background4"
            android:padding="5dp"
            android:onClick="two"/>
        <Button
            android:layout_width="120dp"
            android:layout_height="55dp"

            android:text="Back Right Up"
            android:layout_weight="1"
            android:layout_marginBottom="8dp"
            android:background="@drawable/background4"
            android:padding="5dp"
            android:onClick="threef"/>


    </LinearLayout>
</LinearLayout>
