<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/logo_4"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"

            android:paddingTop="8dp"
            android:gravity="right">
            <LinearLayout
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/feedback"
                android:onClick="feedback"
                android:paddingTop="15dp"
                android:layout_marginRight="14dp">

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CADEDD">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CADEDD"
        android:paddingTop="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"

            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingTop="10dp">
            <!--android:layout_weight="1"-->
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:orientation="vertical"

                android:layout_marginRight="5dp">

                <ImageButton
                    android:id="@+id/b1"

                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/navigation"
                    android:onClick="maps"
                    android:gravity="center"
                    android:background="@drawable/background1"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Navigation"
                    android:textSize="10sp"
                    android:textColor="#000"
                    android:layout_gravity="center"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/b2"
                    android:layout_width="90dp"
                    android:layout_height="90dp"

                    android:src="@drawable/side"
                    android:onClick="sidemirror"
                    android:background="@drawable/background2" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Side Mirror"
                    android:textSize="10sp"
                    android:textColor="#000"
                    android:layout_gravity="center"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:orientation="vertical"
                >

                <ImageButton
                    android:id="@+id/b3"
                    android:layout_width="90dp"
                    android:layout_height="90dp"

                    android:onClick="ultrasonic"
                    android:src="@drawable/parking"
                    android:background="@drawable/background3" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Parking"
                    android:textColor="#000"
                    android:textSize="10sp"
                    android:layout_gravity="center"/>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"

            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            >
            <!--android:layout_weight="1"-->
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/b4"
                    android:layout_width="90dp"
                    android:layout_height="90dp"

                    android:onClick="powerwindow"
                    android:src="@drawable/power_window"
                    android:background="@drawable/background4" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Power Window"
                    android:textSize="10sp"
                    android:textColor="#000"
                    android:layout_gravity="center"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:orientation="vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp">

                <ImageButton
                    android:id="@+id/b5"
                    android:layout_width="90dp"
                    android:layout_height="90dp"

                    android:src="@drawable/maps"
                    android:onClick="location"
                    android:background="@drawable/background5" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Nearby Location"
                    android:textSize="10sp"
                    android:textColor="#000"
                    android:layout_gravity="center"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/b6"
                    android:layout_width="90dp"
                    android:layout_height="90dp"

                    android:onClick="temperature"
                    android:src="@drawable/temperature"
                    android:background="@drawable/background6" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Engine Temperature"
                    android:textSize="10sp"
                    android:textColor="#000"
                    android:layout_gravity="center"/>

            </LinearLayout>


        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingTop="10dp">
        <!--android:layout_weight="1"-->



        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/b7"
                android:layout_width="90dp"
                android:layout_height="90dp"

                android:src="@drawable/mute"
                android:background="@drawable/background7"
                android:onClick="mute"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Mute"
                android:textColor="#000"
                android:textSize="10sp"
                android:layout_gravity="center"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">

            <ImageButton
                android:id="@+id/b8"
                android:layout_width="90dp"
                android:layout_height="90dp"

                android:src="@drawable/water"
                android:onClick="water"
                android:background="@drawable/background8" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Water Level"
                android:textSize="10sp"
                android:textColor="#000"
                android:layout_gravity="center"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/b9"
                android:layout_width="90dp"
                android:layout_height="90dp"

                android:src="@drawable/fuel"
                android:onClick="fuel"
                android:background="@drawable/background9" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Fuel Effiecency"
                android:textSize="10sp"
                android:textColor="#000"
                android:layout_gravity="center"/>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>
    </ScrollView>

</LinearLayout>
